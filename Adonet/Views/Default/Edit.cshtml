@model Adonet.Models.EmployeeModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<form action="~/Default/Edit" method="post">
    <input type="hidden" name="EmpId" value="@Model.EmpId" />
    <label>EmpName</label>
    <input type="text" id="txtname" name="EmpName" value="@Model.EmpName" class="form-control" /><br />
    <label>EmpSalary</label>
    <input type="text" id="txtSalary" name="EmpSalary" value="@Model.EmpSalary" class="form-control" /><br />
    <input type="submit" value="Save" class="btn btn-success" />
</form>